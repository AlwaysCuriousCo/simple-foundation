extends ../layouts/base.pug

block content
  h2.text-xl.font-bold Register
  form(action="/register" method="post" hx-post="/register" hx-target="#result" class="space-y-4")
    div
      label(for="username" class="block text-gray-700") Username:
      input(type="text" name="username" required class="mt-1 p-2 border rounded w-full")
    div
      label(for="password" class="block text-gray-700") Password:
      input(type="password" name="password" required class="mt-1 p-2 border rounded w-full")
    div
      label(for="role" class="block text-gray-700") Role:
      select(name="role" required class="mt-1 p-2 border rounded w-full")
        option(value="super-admin") Super Admin
        option(value="admin") Admin
        option(value="manager") Manager
        option(value="editor") Editor
        option(value="contributor") Contributor
        option(value="subscriber") Subscriber
    button(type="submit" class="bg-blue-500 text-white px-4 py-2 rounded") Register
  div#result.mt-4
